<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="40dp">


        <Spinner
            android:id="@+id/to"
            android:layout_width="108dp"
            android:layout_height="30dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="92dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/onlyRoommateButton"
            style="@style/MyButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="856dp"
            android:text="Dalje"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="73dp"
            android:layout_height="49dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_android_black_24dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="92dp"
            android:text="@string/cijena_stana_do"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="156dp"
            android:text="@string/lokacija"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:text="@string/nudim"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="332dp"
            android:text="@string/spol_cimera"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="496dp"
            android:text="@string/godi_te_cimera_izme_u"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView13"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="536dp"
            android:text="@string/i"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/location"
            android:layout_width="115dp"
            android:layout_height="36dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="156dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="157dp"
            android:layout_height="135dp"
            android:layout_marginStart="108dp"
            android:layout_marginTop="328dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/mu_ko" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:text="@string/ensko" />

            <RadioButton
                android:id="@+id/femaleMale"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:text="@string/svejedno" />

        </RadioGroup>

        <EditText
            android:id="@+id/year1"
            android:layout_width="55dp"
            android:layout_height="27dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="540dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/year2"
            android:layout_width="55dp"
            android:layout_height="27dp"
            android:layout_marginStart="144dp"
            android:layout_marginTop="548dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/tt"
            android:layout_width="283dp"
            android:layout_height="96dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="588dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/smoke"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/ne_elim_da_je_cimer_pu_a"
                android:textSize="18sp" />


            <RadioButton
                android:id="@+id/noSmoke"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:text="@string/svejedno_mi_je"
                android:textSize="18sp" />


        </RadioGroup>

        <RadioGroup
            android:id="@+id/tt2"
            android:layout_width="312dp"
            android:layout_height="94dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="704dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/pet"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/ne_elim_da_cimer_ima_ku_nog_ljubimca"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/noPet"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:text="@string/svejedno_mi_je"
                android:textSize="18sp" />


        </RadioGroup>

        <RadioGroup
            android:id="@+id/tt3"
            android:layout_width="249dp"
            android:layout_height="81dp"
            android:layout_marginTop="220dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.913"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/soloRoom"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/zasebnu_sobu"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/sharedRoom"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:text="@string/sobu_koju_emo_dijeliti"
                android:textSize="18sp" />


        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
